@model IEnumerable<Zero_Hunger.EF.Collection>
@{
    ViewBag.Title = "Track";
}

<style>
    .header a.admin {
        background-color: dodgerblue;
        color: white;
    }

    .plus-icon:after {
        content: "\f067";
        font-family: 'FontAwesome';
        padding-left: 5px;
    }
</style>
<link href="~/Content/table.css" rel="stylesheet" type="text/css" />
<link href="~/Content/admin_login.css" rel="stylesheet" type="text/css" />
<a id="sub2" href="./Index">See Full List</a>
<br />
<br />
<b><span class="alert-warning"> @TempData["error"] </span></b>

<table class="styled-table">
    <tr>
        <th>
            <b>Donation Id</b>
        </th>
        <th>
            <b>Assigned Emp iD</b>
        </th>
        <th>
            <b>Assigned Emp Name</b>
        </th>
        <th>
            <b>Status</b>
        </th>
        <th>
            <b>Location</b>
        </th>
        <th>
            <b>Expare Food In</b>
        </th>
        <th>
            <b>Address</b>
        </th>
        <th>
            <b>Asssignment</b>
        </th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>

            <td><b>@item.DonationId</b></td>

            <td><b>@item.EmpId</b></td>

            <td><b>@item.Employee.Name</b></td>

            <td><b>@item.Status</b></td>

            <td><b>@item.Donation.Location</b></td>

            <td><b>@item.Donation.ExpireIn</b></td>

            <td><b>@item.Donation.Address</b></td>

            <td>
                @if(@item.Donation.Status == "Deliverable")
                {
                    <b>To Collect</b>
                }
                else if(@item.Donation.Status == "Processed")
                {
                    <b>To Distribute</b>
                }
                else {
                    <b>Unknown</b>
                }
            </td>
        </tr>
    }

</table>

